# .env.development (for React app)
# Server configuration
REACT_APP_SERVER_PORT=3001
REACT_APP_SERVER_URL=http://localhost:3001

# For production or network deployment, change to your server's IP
# REACT_APP_SERVER_URL=http://192.168.1.100:3001

# WebRTC configuration
REACT_APP_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# .env.production (for React app)
# Production server configuration
REACT_APP_SERVER_PORT=3001
REACT_APP_SERVER_URL=https://your-domain.com

# For local network production
# REACT_APP_SERVER_URL=http://YOUR_SERVER_IP:3001

# WebRTC STUN servers for production
REACT_APP_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302